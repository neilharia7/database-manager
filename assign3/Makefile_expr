# Compiler and flags
CC = gcc
CFLAGS = -g -Wall

# Source files
SRCS = test_expr.c expr.c record_mgr.c tables.c test_helper.c dberror.c storage_mgr.c buffer_mgr.c buffer_mgr_stat.c rm_serializer.c

# Object files
OBJS = $(SRCS:.c=.o)

# Output executable
EXEC = test_program_expr

# Default target
all: $(EXEC)

# Link object files to create the final executable
$(EXEC): $(OBJS)
    $(CC) $(OBJS) -o $(EXEC)

# Compile .c to .o
%.o: %.c
    $(CC) $(CFLAGS) -c $< -o $@

# Clean up
clean:
    rm -f $(OBJS) $(EXEC)