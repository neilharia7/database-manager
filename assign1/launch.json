{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test_program",  // Path to the compiled binary
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",  // Set the current working directory
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for GDB",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",  // Path to GDB binary (adjust if necessary)
            "preLaunchTask": "build",  // Runs the build task before launching
            "miDebuggerArgs": "",
            "logging": {
                "trace": true,
                "traceResponse": true
            }
        }
    ]
}
